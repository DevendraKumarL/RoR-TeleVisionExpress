<div class="container">
    <div class="row">
        <% @all_shows.each do |show| %>
            <div class="card col-lg-4 col-md-3">
                <img src="<%= show.image %>" class="card-img-top img-thumbnail" alt="<%= show.name %>" width="318px" height="180px" style="width: 100%; max-height: 180px;">
                <div class="card-block">
                    <center><h4 class="card-title"><%= show.name %></h4></center>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="material-icons" style="font-size:15px; display: inline;  margin-left: 100px;">event</i><%= show.year %>
                        </li>
                        <li class="list-group-item">
                            <i class="material-icons" style="font-size:15px; display: inline;
                            color: yellow; margin-left: 100px;">grade</i><%= show.rating %>
                        </li>
                    </ul>
                    <div class="card-block">
                        <center><a href="<%=  a_show_path(show.name)%>" class="card-link">MORE</a></center>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>


