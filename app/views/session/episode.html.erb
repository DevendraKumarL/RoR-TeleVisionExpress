<div class="container">
    <div class="row col-lg-offset-3 col-lg-6">
        <% @this_season.each do |season| %>
            <div class="card">
                <div class="card-block">
                    <h2 class="card-title"><%= season.season_name %>
                        <label class="label label-success"><%= season.year %></label>
                    </h2>
                    <img src="<%= season.image %>" style="display: block; margin: auto; box-shadow: 5px 5px 40px rgba(0, 0, 0, 0.4);"><br><br>
                    <p class="card-text">
                        <h4><label class="label label-success">
                            <i class="material-icons" style="font-size:20px; display: inline;color: yellow;">grade</i>
                            <%= season.rating %>/10
                        </label></h4>
                        <h5><label class="label label-info">Season Overview</label></h5>
                        <div class="well">
                            <%= season.season_overview %>
                        </div>
                    </p>
                </div>
                <div class="list-group">
                    <a href="<%= season_view_review_path(season.id) %>" class="list-group-item">Reviews</a>
                    <a href="<%= season_view_rating_path(season.id) %>" class="list-group-item">Ratings</a>
                    <% if @user %>
                        <a href="<%= season_give_review_path(season.id) %>" class="list-group-item">Give Review</a>
                        <a href="<%= season_give_rating_path(season.id) %>" class="
                        list-group-item">Give Rating</a>
                    <% end %>
                </div>
            </div>
       <% end %>
    </div>
    <div class="row col-lg-12">
        <div class="alert alert-success">
            <h2>Episodes</h2>
        </div>
    </div>
    <% @this_episode.each do |episode| %>
        <div class="row">
            <div class="col-lg-3">
                <h3><label class="label label-default">
                <%= episode.episode_name %></label></h3>
                <img src="<%= episode.image %>" class="img-thumbnail">
            </div>
            <div class="col-lg-9">
                <p>
                    <h4><span class="label label-success">
                        (<%= episode.air_date %>)
                    </span>
                </p>
                <h4><span class="label label-default">Description</span></h4><br><br>
                <div class="well">
                    <%= episode.episode_description %>
                </div>
                <a href="<%= a_episode_detail_path(episode.id) %>" class="btn btn-default btn-block">More</a><br>
            </div>
        </div><br>
    <% end %><br>
