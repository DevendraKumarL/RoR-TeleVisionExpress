<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <th>id</th>
                <th>episode_name</th>
                <th>seasons_id</th>
                <th>season_description</th>
                <th>air_date</th>
                <th>rating</th>
                <th>image</th>               
            </thead>
            <tbody>
                <% @episodes.each do |episode| %>
                    <tr>
                        <td><%= episode.id %></td>
                        <td><%= episode.episode_name %></td>
                        <td><%= episode.seasons_id %></td>
                        <td><%= episode.air_date %></td>
                        <td>
                            <dl class="dl-horizontal">
                                <dt class="text-truncate">
                                    <%= episode.episode_description %>
                                </dt>
                            </dl>
                        </td>
                        <td><%= episode.rating %></td>
                        <td><%= episode.image %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>