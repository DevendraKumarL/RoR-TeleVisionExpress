<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered table-hover table-responsive">
            <thead>
                <tr>
                    <th>id</th>
                    <th >name</th>
                    <th>categories_id</th>
                    <th>year</th>
                    <th>director</th>
                    <th>language</th>
                    <th>storyline</th>
                    <th>cast</th>
                    <th>rating</th>
                    <th>aired_on</th>
                    <th>no_seasons</th>
                    <th>image</th>
                </tr>
            </thead>
            <tbody>
                <% @tvshows.each do |show| %>
                    <tr>
                        <td><%= show.id %></td>
                        <td><%= show.name %></td>
                        <td><%= show.categories_id %></td>
                        <td><%= show.year %></td>
                        <td><%= show.director %></td>
                        <td><%= show.language %></td>
                        <td>
                            <dl class="dl-horizontal">
                                <dt class="text-truncate">
                                    <%= show.storyline %>
                                </dt>
                            </dl>
                        </td>
                        <td>
                            <dl class="dl-horizontal">
                                <dt class="text-truncate">
                                    <%= show.cast %>
                                </dt>
                            </dl>
                        </td>
                        <td><%= show.rating %></td>
                        <td><%= show.aired_on %></td>
                        <td><%= show.no_seasons %></td>
                        <td><%= show.image %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>